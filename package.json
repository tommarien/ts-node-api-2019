{
  "name": "ts-node-api-2019",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:tommarien/ts-node-api-2019.git",
  "author": "Tom Marien <tommarien@gmail.com>",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "env": "sync-dotenv",
    "build": "yarn run clean && tsc",
    "clean": "rimraf coverage dist",
    "lint": "tsc --noEmit --pretty && eslint --ext .js,.ts ./",
    "serve": "nodemon --exec ts-node -r dotenv/config src/server.ts | pino-pretty --colorize --translateTime --ignore hostname",
    "test": "jest --config jest.unit.config.js",
    "test:int": "jest --runInBand --config jest.integration.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/http-terminator": "^2.0.1",
    "@types/jest": "^26.0.14",
    "@types/node": "^12.12.64",
    "@types/pino": "^6.3.2",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "husky": "^4.3.0",
    "jest": "^26.5.0",
    "jest-junit": "^12.0.0",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.4.0",
    "nodemon": "^2.0.4",
    "pino-pretty": "^4.2.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "supertest": "^5.0.0",
    "sync-dotenv": "2.6.2",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "express": "^4.17.1",
    "http-terminator": "^2.0.3",
    "pino": "^6.7.0"
  }
}
