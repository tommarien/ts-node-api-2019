{
  "name": "ts-node-api-2019",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:tommarien/ts-node-api-2019.git",
  "author": "Tom Marien <tommarien@gmail.com>",
  "license": "MIT",
  "scripts": {
    "env": "sync-dotenv",
    "build": "yarn run clean && tsc --sourceMap",
    "clean": "rimraf coverage dist",
    "generate": "json2ts -i src/schemas/src/ -o src/schemas/types/",
    "lint": "concurrently -n tsc,eslint \"tsc --noEmit --pretty\" \"eslint --ext .js,.ts ./\"",
    "migrate": "node -r dotenv/config lib/migrate.js",
    "serve": "nodemon --exec ts-node --files -r dotenv/config src/server.ts | pino-pretty --colorize --translateTime --ignore hostname",
    "test": "jest --config jest.unit.config.js",
    "test:int": "jest --runInBand --config jest.integration.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/http-terminator": "^2.0.1",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.19",
    "@types/pg": "^7.14.7",
    "@types/pino": "^6.3.4",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@types/yargs": "^15.0.12",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-sql": "^1.2.0",
    "husky": "4.3.6",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6",
    "pino-pretty": "^4.3.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.1",
    "sync-dotenv": "2.6.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.1",
    "@nearform/sql": "^1.5.0",
    "@types/swagger-ui-express": "^4.1.2",
    "ajv": "^6.12.6",
    "date-fns": "^2.16.1",
    "express": "^4.17.1",
    "http-terminator": "^2.0.3",
    "json-schema-to-typescript": "^10.0.3",
    "lodash.kebabcase": "^4.1.1",
    "pg": "8.5.1",
    "pino": "^6.9.0",
    "postgrator": "^4.1.1",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2",
    "yargs": "^16.2.0"
  }
}
