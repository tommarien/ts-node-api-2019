{
  "name": "ts-node-api-2019",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:tommarien/ts-node-api-2019.git",
  "author": "Tom Marien <tommarien@gmail.com>",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "env": "sync-dotenv",
    "build": "yarn run clean && tsc",
    "clean": "rimraf coverage dist",
    "lint": "tsc --noEmit --pretty && eslint --ext .js,.ts ./",
    "serve": "nodemon --exec ts-node -r dotenv/config src/server.ts | pino-pretty --colorize --translateTime --ignore hostname",
    "test": "jest --config jest.unit.config.js",
    "test:int": "jest --runInBand --config jest.integration.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.3",
    "@types/node": "^12.12.44",
    "@types/pino": "^6.0.1",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.2",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-junit": "^10.0.0",
    "jest-watch-typeahead": "^0.6.0",
    "lint-staged": "^10.2.9",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "sync-dotenv": "2.6.1",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "pino": "^6.3.2",
    "pino-pretty": "^4.0.0"
  }
}
