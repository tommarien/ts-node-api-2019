{
  "name": "ts-node-api-2019",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:tommarien/ts-node-api-2019.git",
  "author": "Tom Marien <tommarien@gmail.com>",
  "license": "MIT",
  "scripts": {
    "env": "sync-dotenv",
    "build": "yarn run clean && tsc --sourceMap",
    "clean": "rimraf coverage dist",
    "lint": "concurrently -n tsc,eslint \"tsc --noEmit --pretty\" \"eslint --ext .js,.ts ./\"",
    "migrate": "node -r dotenv/config ./node_modules/migrate-mongo/bin/migrate-mongo.js",
    "serve": "nodemon --exec ts-node --files -r dotenv/config src/server.ts | pino-pretty --colorize --translateTime --ignore hostname",
    "test": "jest --config jest.unit.config.js",
    "test:int": "jest --runInBand --config jest.integration.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/http-terminator": "^2.0.1",
    "@types/jest": "^26.0.16",
    "@types/node": "^14.14.10",
    "@types/pino": "^6.3.4",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.2",
    "nodemon": "^2.0.6",
    "pino-pretty": "^4.3.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.1",
    "sync-dotenv": "2.6.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "ajv": "^6.12.6",
    "express": "^4.17.1",
    "http-terminator": "^2.0.3",
    "migrate-mongo": "^8.1.4",
    "pino": "^6.7.0",
    "uuid": "^8.3.1"
  }
}
