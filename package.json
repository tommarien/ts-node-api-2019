{
  "name": "ts-node-api-2019",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:tommarien/ts-node-api-2019.git",
  "author": "Tom Marien <tommarien@gmail.com>",
  "license": "MIT",
  "scripts": {
    "env": "sync-dotenv",
    "build": "yarn run clean && tsc --project tsconfig.prod.json --sourceMap",
    "clean": "rimraf coverage dist",
    "generate": "json2ts -i src/api/schemas/src/ -o src/api/schemas/types/",
    "lint": "concurrently -n tsc,lint, -c \"cyan.bold,green.bold\" \"tsc --noEmit --pretty\" \"eslint --ext .js,.ts ./\"",
    "migrate": "node -r dotenv/config lib/migrate.js",
    "serve": "yarn run clean && tsc-watch --project tsconfig.prod.json --onSuccess \"node --require dotenv/config dist/server.js\" | pino-pretty --colorize --translateTime --ignore hostname",
    "test": "jest --runInBand --config jest.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/express-serve-static-core": "^4.17.18",
    "@types/http-terminator": "^2.0.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.27",
    "@types/pg": "^7.14.9",
    "@types/pino": "^6.3.5",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@types/yargs": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-sql": "^1.2.0",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.4",
    "pino-pretty": "^4.5.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "sync-dotenv": "2.6.2",
    "ts-jest": "^26.5.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.1",
    "@nearform/sql": "^1.5.0",
    "@types/swagger-ui-express": "^4.1.2",
    "ajv": "^6.12.6",
    "date-fns": "^2.17.0",
    "express": "^4.17.1",
    "http-terminator": "^3.0.0",
    "json-schema-to-typescript": "^10.1.3",
    "lodash.kebabcase": "^4.1.1",
    "pg": "8.5.1",
    "pino": "^6.11.1",
    "postgrator": "^4.1.1",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2",
    "yargs": "^16.2.0"
  }
}
