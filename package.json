{
  "name": "ts-node-api-2019",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:tommarien/ts-node-api-2019.git",
  "author": "Tom Marien <tommarien@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "14.16.0"
  },
  "scripts": {
    "env": "sync-dotenv",
    "build:prod": "yarn run clean && tsc --project tsconfig.prod.json --sourceMap",
    "clean": "rimraf coverage dist",
    "generate": "json2ts -i src/api/schemas/src/ -o src/api/schemas/types/",
    "lint": "concurrently -n tsc,lint, -c \"cyan.bold,green.bold\" \"tsc --noEmit --pretty\" \"eslint --ext .js,.ts --quiet ./\"",
    "migrate": "node-pg-migrate --migration-filename-format utc --tsconfig tsconfig.json",
    "migrate:test": "yarn migrate --database-url-var DATABASE_TEST_URL",
    "serve": "yarn run clean && tsc-watch --project tsconfig.prod.json --onSuccess \"node --require dotenv/config dist/server.js\" | pino-pretty --colorize --translateTime --ignore hostname",
    "test": "jest --runInBand --config jest.config.js",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/express-serve-static-core": "^4.17.18",
    "@types/http-terminator": "^2.0.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/pg": "^7.14.10",
    "@types/pino": "^6.3.6",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "concurrently": "^6.0.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-sql": "^1.2.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "sync-dotenv": "2.6.2",
    "ts-jest": "^26.5.3",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.1",
    "@nearform/sql": "^1.5.0",
    "@types/swagger-ui-express": "^4.1.2",
    "ajv": "^6.12.6",
    "date-fns": "^2.18.0",
    "express": "^4.17.1",
    "http-terminator": "^3.0.0",
    "json-schema-to-typescript": "^10.1.3",
    "json5": "^2.2.0",
    "node-pg-migrate": "^5.9.0",
    "pg": "8.5.1",
    "pino": "^6.11.1",
    "pino-pretty": "^4.6.0",
    "swagger-ui-express": "^4.1.6",
    "ts-node": "^9.1.1",
    "uuid": "^8.3.2"
  }
}
