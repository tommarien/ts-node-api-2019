    "eslint-plugin-jest": "^23.0.4",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "jest-extended": "^0.11.2",
    "jest-watch-typeahead": "^0.4.2",
    "lint-staged": "^9.4.3",
    "nodemon": "^1.19.4",
