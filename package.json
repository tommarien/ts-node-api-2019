{
  "name": "ts-node-api-2019",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:tommarien/ts-node-api-2019.git",
  "author": "Tom Marien <tommarien@gmail.com>",
  "license": "MIT",
  "scripts": {
    "env": "sync-dotenv",
    "build": "yarn run clean && tsc",
    "clean": "rimraf dist",
    "lint": "tsc --noEmit --pretty && eslint --ext .js,.ts ./",
    "serve": "nodemon --exec ts-node -r dotenv/config src/server.ts",
    "test": "jest --config jest.unit.config.js",
    "test:int": "jest --runInBand --config jest.integration.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/jest": "24.0.19",
    "@types/node": "^12.12.14",
    "@types/pino": "^5.15.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.3.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-extended": "^0.11.2",
    "jest-watch-typeahead": "^0.4.2",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "supertest": "^4.0.2",
    "sync-dotenv": "2.3.0",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "@hapi/boom": "^9.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "pino": "^5.15.0",
    "pino-pretty": "^3.5.0"
  }
}
